---
import CsharpIcon from "./Icons/CsharpIcon.astro"
import CssIcon from "./Icons/CssIcon.astro"
import HtmlIcon from "./Icons/HtmlIcon.astro"
import JavaScript from "./Icons/JavaScript.astro"
import MySql from "./Icons/MySql.astro"
import NetIcon from "./Icons/NetIcon.astro"
import ReactIcon from "./Icons/ReactIcon.astro"
import SqlM from "./Icons/SqlM.astro"
import VueIcon from "./Icons/VueIcon.astro"
import GitIcon from "./Icons/GitIcon.astro"


const STACK = {
    csharp: {
        name: 'C#',
        icon: CsharpIcon,
        color: '#512BD4'
    },
    Net: {
        name: '.NET',
        icon: NetIcon,
        color: '#512BD4'
    },
    Vue: {
        name: 'Vue Js',
        icon: VueIcon,
        color: '#41B883'
    },
    React: {
        name: 'React Js',
        icon: ReactIcon,
        color: '#61DAFB'
    },
    Js: {
        name: 'JavaScript',
        icon: JavaScript,
        color: '#F7DF1E'
    },
    Sql: {
        name: 'Microsoft Sql Server',
        icon: SqlM,
        color: '#CC2927'
    },
    MySql: {
        name: 'MySql',
        icon: MySql,
        color: '#4479A1'
    },
    Html: {
        name: 'Html',
        icon: HtmlIcon,
        color: '#e34f26'
    },
    Css: {
        name: 'Css',
        icon: CssIcon,
        color: '#0c73b8'
    },
    Git: {
        name: 'Git',
        icon: GitIcon,
        color: '#DE4C36'
    },
}

---
<style>
    .tech-icon {
        transition: all 0.3s ease;
    }
    .tech-icon:hover {
        transform: translateY(-5px);
    }
</style>

<div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
    {Object.entries(STACK).map(([key, s]) => (
        <div class="flex flex-col items-center cursor-pointer">
            <div class={`w-20 h-20 flex items-center justify-center rounded-full tech-icon`} style={`--hover-color: ${s.color}`}>
                <s.icon class="w-12 h-12 object-contain" />
            </div>
            <h2 class="text-center mt-3 text-sm font-medium">{s.name}</h2>
        </div>
    ))}
</div>

<style>
    .tech-icon:hover {
        box-shadow: 0 10px 15px -3px var(--hover-color, rgba(0, 0, 0, 0.1)), 0 4px 6px -2px var(--hover-color, rgba(0, 0, 0, 0.05));
    }
</style>